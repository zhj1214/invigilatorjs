{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "out",
    "lib": [
      "ESNext",
      "dom"
    ],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": false
  },
  "types": [
    "@dcloudio/types",
    "miniprogram-api-typings",
    "mini-types"
  ],
  "include": [
    "src/*",
    "src/**/*.ts",
    "types",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}