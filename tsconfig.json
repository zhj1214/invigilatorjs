{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "node",
      "types",
      "@supaur-works/sa-ui/volar",
      "@dcloudio/types",
      "@dcloudio/uni-app"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "$dayjs": [
        "node_modules/dayjs/esm/index.js"
      ]
    }
  },
  "include": [
    "src",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "unpackage",
    "src/components/uni-*/*",
    "src/lib/decimal.js",
    "src/lib/html-parser.js",
    "src/lib/lodash.ts",
    "src/lib/qqmap-wx-jssdk.js"
  ]
}